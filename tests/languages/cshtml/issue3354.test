<input type="text" placeholder="@Localize.GetLabelHtml("PLACEHOLDER")"/>

<h1>
    @Localize.GetLabelHtml("TITLE")
</h1>

@{
    var man = "Federico";
    var text = string.Concat("Nice to meet you", " ", man);
}

@helper TrialHelper(string name) {
    var text = string.Concat("Hello", " ", name);
    <h1>
        @(text + ", how's going?")
    </h1>
    <p>
        Hello World!
    </p>
}

